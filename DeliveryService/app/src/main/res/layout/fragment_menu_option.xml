<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStart="0dp">

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_arrow_forward"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:translationZ="10dp"
            android:rotation="180"
            android:background="#00FFFFFF"
            tools:ignore="ContentDescription" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Store Image -->
            <ImageView
                android:id="@+id/menu_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/image_menu_sample"
                android:layout_marginBottom="16dp" />

            <!-- Dish Name -->
            <TextView
                android:id="@+id/menu_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="고추장갈비 &amp; 보리밥 한상"
                android:textColor="@android:color/black"
                style="@style/bm_bold"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Dish Description -->
            <TextView
                android:id="@+id/menu_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="메뉴 설명"
                style="@style/bm_default"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp" />

            <!-- Reviews -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="메뉴 리뷰 14개"
                style="@style/bm_default"
                android:textColor="@color/primary"
                android:textSize="14sp"
                android:layout_marginBottom="16dp"
                android:paddingLeft="8dp" />

            <!-- Price -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가격"
                android:textColor="@color/black"
                style="@style/bm_bold"
                android:textSize="20sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/menu_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="17,000원"
                android:textColor="@color/black"
                style="@style/bm_default"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Side Dish Selection -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="곱빼기 여부"
                android:textColor="@color/black"
                android:textSize="16sp"
                style="@style/bm_bold"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/side_dish_yes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:text="예 (+ 1,000원)"
                    style="@style/bm_default"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/side_dish_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:text="아니요"
                    style="@style/bm_default"
                    android:textSize="14sp" />
            </RadioGroup>

            <!-- Additional Options -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="수량"
                android:textColor="@color/black"
                android:textSize="16sp"
                style="@style/bm_bold"
                android:layout_marginBottom="8dp" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <Button
                    android:id="@+id/btn_minus"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="-"
                    style="@style/bm_default"
                    android:textSize="30sp"
                    android:background="@drawable/shape_radius_8_with_stroke"/>
                
                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1"
                    style="@style/bm_default"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/btn_plus"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:text="+"
                    style="@style/bm_default"
                    android:textSize="30sp"
                    android:background="@drawable/shape_radius_8_with_stroke"/>
            </LinearLayout>


            <Button
                android:id="@+id/add_to_cart_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="담기"
                style="@style/bm_default"
                android:backgroundTint="@color/primary"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
