<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.mju.deliveryservice.presentation.view.store.MenuViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/ib_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_arrow_forward"
                app:tint="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:translationZ="10dp"
                android:rotation="180"
                android:background="@drawable/shape_radius_10"
                android:backgroundTint="#33000000"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/store_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"

                app:layout_constraintTop_toTopOf="parent"

                android:scaleType="centerCrop"
                android:src="@drawable/image_store_sample" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/store_image"
                android:orientation="vertical">

                <!-- Store Image -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/store_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="가게명"
                        android:textColor="@android:color/black"
                        android:textSize="24sp"
                        style="@style/bm_bold" />

                    <RatingBar
                        android:id="@+id/store_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:progressTint="#FFC107"
                        android:secondaryProgressTint="@color/gray_8e"
                        android:rating="4.6"
                        android:numStars="5"
                        android:stepSize="0.1"
                        android:isIndicator="true" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="리뷰 65개"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp"
                        style="@style/bm_default"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="가게정보/원산지"
                        style="@style/bm_default"
                        android:textColor="@color/black"
                        android:background="?attr/selectableItemBackground" />

                    <TextView
                        android:id="@+id/store_min_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="최소주문금액 19,000원"
                        style="@style/bm_default"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/store_delivery_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/bm_default"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        tools:text="한집배달 15~25분"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/store_delivery_tip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="배달팁 0원~1,000원"
                        style="@style/bm_default"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="16dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="♥ 142"
                        android:background="?attr/selectableItemBackground" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="공유"
                        style="@style/bm_default"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:background="?attr/selectableItemBackground" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="함께주문"
                        style="@style/bm_default"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:background="?attr/selectableItemBackground" />
                </LinearLayout>

                <TextView
                    android:id="@+id/menu_list_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="메뉴"
                    android:textSize="20sp"
                    style="@style/bm_default"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="12dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/menu_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:scrollbars="vertical"/>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>