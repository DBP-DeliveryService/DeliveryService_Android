<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Toolbar
            android:id="@+id/tb_coupon"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent"
            android:contentInsetStart="0dp">

            <ImageButton
                android:id="@+id/ib_clear"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_clear"
                android:background="#00FFFFFF"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="할인쿠폰"
                style="@style/bm_bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_gravity="center" />
        </Toolbar>

        <EditText
            android:id="@+id/et_coupon_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="3"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tb_coupon"
            app:layout_constraintEnd_toStartOf="@id/btn_issue"
            android:layout_margin="20dp"

            tools:text="123456"
            android:background="@drawable/shape_radius_8_with_stroke"
            android:padding="8dp"
            style="@style/bm_default"
            android:includeFontPadding="false" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_issue"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHorizontal_weight="1"

            app:layout_constraintTop_toTopOf="@id/et_coupon_code"
            app:layout_constraintBottom_toBottomOf="@id/et_coupon_code"
            app:layout_constraintStart_toEndOf="@id/et_coupon_code"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"

            android:text="쿠폰 발급"
            style="@style/bm_default"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/shape_radius_8_with_stroke"
            android:backgroundTint="@color/primary" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_coupon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/et_coupon_code"
            app:layout_constraintBottom_toTopOf="@id/btn_register"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:padding="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="20dp"

            android:text="적용하기"
            android:textColor="@color/white"
            style="@style/bm_bold"
            android:textSize="16sp"
            android:background="@drawable/shape_radius_8_with_stroke"
            android:backgroundTint="@color/primary" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>